run calc_pi

define calc_pi {
    -1 in thought

    0 in 0
    1 in 1
    2 in 1
    3 in 0

    loop {
        think thought + 1
        0 in out 0 + 4 * out 2 / out 1
        1 in out 1 + 2
        2 in 0 - out 2
        3 in out 3 + 1

        if 1000000 {break}
    }

    print out 0
    think out -1
}